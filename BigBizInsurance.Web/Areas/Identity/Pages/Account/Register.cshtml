@page
@using UsersResources = UserManagement.Localization.Users.UsersResources
@using _Layout = BigBizInsurance.Web.Localization._Layout._Layout
@using SharedResources = Common.Localization.Shared.Shared
@model RegisterModel
@{
    ViewData["Title"] = UsersResources.Register;
    Layout = "_LayoutIdentity";
}



<h4 class="text-dark mb-5">@UsersResources.Register</h4>
<form id="account" asp-route-returnUrl="@Model.ReturnUrl" method="post">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="row">
        <div class="form-group col-md-12 mb-4">
            <input asp-for="Input.UserName" placeholder="@(UsersResources.UserName)" class="form-control input-lg" />
            <span asp-validation-for="Input.UserName" class="text-danger"></span>

        </div>
        <div class="form-group col-md-12 mb-4">
            <input asp-for="Input.Email" placeholder="@(UsersResources.Email)" class="form-control input-lg" />
            <span asp-validation-for="Input.Email" class="text-danger"></span>

        </div>

        <div class="form-group col-md-12 ">
            <input asp-for="Input.Password" placeholder="@(UsersResources.Password)" class="form-control input-lg" />
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-group col-md-12 mb-4">
            <input asp-for="Input.ConfirmPassword" placeholder="@(UsersResources.ConfirmPassword)" class="form-control input-lg" />
            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>

        </div>
        <div class="col-md-12">

            <button type="submit" class="btn btn-lg btn-primary btn-block mb-4">@UsersResources.Register </button>

        </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" /> }

