@page "/Audits/Display/{id?}"
@using AuditResources = BigBizInsurance.Localization.AuditResources.AuditResources
@using SharedResources = Common.Localization.Shared.Shared
@model BigBizInsurance.Web.Areas.Management.Pages.Audits.DisplayModel
@{
}



<div class="row">
    <div class="col-lg-12">
        <div class="card card-default">
            <div class="card-header card-header-border-bottom">
                <h2>@AuditResources.Display_FormTitle</h2>
            </div>
            <div class="card-body">
                <form  method="post">
                    <div class="form-row">
                        <div class="col-md-2 mb-3">
                            <label>  @AuditResources.FormUserName</label>

                        </div>
                        <div class="col-md-10 mb-3">
                            <span>@Model.Input.UserName</span>

                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-2 mb-3">
                            <label> @AuditResources.FormActionCode</label>
                        </div>
                        <div class="col-md-10 mb-3">
                            <span>@Model.Input.Audit_ActionCode</span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-2 mb-3">
                            <label> @AuditResources.FormDate</label>
                        </div>
                        <div class="col-md-10 mb-3">
                            <span>@Model.Input.DateString</span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-2 mb-3">
                            <label> @AuditResources.FormEntityName</label>
                        </div>
                        <div class="col-md-10 mb-3">
                            <span>@Model.Input.EntityName</span>
                        </div>
                    </div>
                    <div class="form-row">
                        <div class="col-md-2 mb-3">
                            <label> @AuditResources.FormActionData</label>
                        </div>
                        <div class="col-md-10 mb-3">
                            <span>@Model.Input.ActionData</span>
                        </div>
                    </div>
                    <button type="submit" asp-page-handler="Cancel" formnovalidate="formnovalidate" class="btn btn-primary">@SharedResources.BackToList</button>

                </form>
            </div>
        </div>
    </div>
</div>
