@page "/Users/ChangePassword/{userId?}"
@using UsersManagementResources = UserManagement.Localization.UsersManagement.UsersManagement;
@using SharedResources = Common.Localization.Shared.Shared;
@model BigBizInsurance.Web.Areas.UserManagementAdmin.Pages.Users.ChangePasswordModel
@{
     
}


<div class="row">
    <div class="col-lg-12">
        <div class="card card-default">
            <div class="card-header card-header-border-bottom">
                <h2>@UsersManagementResources.ChangePassword_FormTitle</h2>
            </div>
            <div class="card-body">
                <div asp-validation-summary="All" class="text-danger"></div>

                <form method="post" enctype="multipart/form-data">
                    <input asp-for="Input.Id" type="hidden" />

                    <div class="form-row">
                        <div class="col-md-2 mb-3">
                            <label>
                                @UsersManagementResources.FormUserName <span class="required">*</span>
                            </label>

                        </div>
                        <div class="col-md-10 mb-3">
                            <span>@Model.Input.UserName</span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="col-md-2 mb-3">
                            <label>
                                @UsersManagementResources.FormPassword <span class="required">*</span>
                            </label>

                        </div>
                        <div class="col-md-10 mb-3">
                            <input type="password" asp-for="Input.Password" class="form-control  has-feedback-left">
                            <span class="fa fa-lock form-control-feedback left" aria-hidden="true"></span>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-row">
                        <div class="col-md-2 mb-3">
                            <label>
                                @UsersManagementResources.FormConfirmPassword <span class="required">*</span>
                            </label>

                        </div>
                        <div class="col-md-10 mb-3">
                            <input type="password" asp-for="Input.ConfirmPassword" class="form-control  has-feedback-left">
                            <span class="fa fa-lock form-control-feedback left" aria-hidden="true"></span>
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <button type="submit" asp-page-handler="Submit" class="btn btn-success">@SharedResources.Save</button>
                    <button class="btn btn-primary" type="reset">@SharedResources.Reset</button>
                    <button type="submit" asp-page-handler="Cancel" formnovalidate="formnovalidate" class="btn btn-primary">@SharedResources.BackToList</button>

                </form>
            </div>
        </div>
    </div>
</div>
